<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- منع النسخ الاحتياطي للبيانات الحساسة -->
        <exclude domain="sharedpref" path="flutter.secure_storage"/>
        <exclude domain="sharedpref" path="auth_tokens"/>
        <exclude domain="database" path="user_credentials.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- منع نقل البيانات الحساسة بين الأجهزة -->
        <exclude domain="sharedpref" path="flutter.secure_storage"/>
        <exclude domain="sharedpref" path="auth_tokens"/>
        <exclude domain="database" path="user_credentials.db"/>
    </device-transfer>
</data-extraction-rules>
