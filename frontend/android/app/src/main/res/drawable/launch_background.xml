<?xml version="1.0" encoding="utf-8"?>
<!-- شاشة البداية الجديدة لتطبيق منتجاتي -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- الخلفية الرئيسية بلون التطبيق -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1a1a2e"
                android:centerColor="#16213e"
                android:endColor="#0f1419" />
        </shape>
    </item>

    <!-- دائرة خلفية ذهبية خفيفة -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#20FFD700" />
            <size android:width="400dp" android:height="400dp" />
        </shape>
    </item>

    <!-- دائرة أصغر للتأثير -->
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#30FFD700" />
            <size android:width="300dp" android:height="300dp" />
        </shape>
    </item>

    <!-- الشعار الرئيسي - حجم كبير ومتناسق -->
    <item android:gravity="center">
        <bitmap
            android:gravity="center"
            android:src="@mipmap/launcher_icon"
            android:scaleType="centerInside"
            android:width="180dp"
            android:height="180dp" />
    </item>

    <!-- تأثير إضاءة من الأسفل -->
    <item android:gravity="center|bottom" android:bottom="80dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:centerColor="#40FFD700"
                android:endColor="#00FFD700" />
            <size android:width="300dp" android:height="100dp" />
        </shape>
    </item>

</layer-list>
