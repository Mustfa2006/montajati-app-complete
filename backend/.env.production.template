# ===================================
# ملف Environment Variables للإنتاج
# ===================================
# هذا الملف يحتوي على جميع المتغيرات المطلوبة للإنتاج
# انسخ هذا الملف وأعد تسميته إلى .env.production
# واملأ القيم الصحيحة

# ===================================
# إعدادات قاعدة البيانات - Supabase
# ===================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================================
# إعدادات Firebase للإشعارات
# ===================================
# احصل على هذه البيانات من Firebase Console > Project Settings > Service Accounts

# معرف مشروع Firebase
FIREBASE_PROJECT_ID=withdrawal-notifications

# المفتاح الخاص لـ Service Account (يجب أن يبدأ بـ -----BEGIN PRIVATE KEY-----)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# البريد الإلكتروني لـ Service Account
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@withdrawal-notifications.iam.gserviceaccount.com

# ===================================
# إعدادات الخادم
# ===================================
PORT=3003
NODE_ENV=production

# ===================================
# إعدادات الأمان
# ===================================
# معدل الطلبات المسموح (15 دقيقة)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# المواقع المسموح لها بالوصول (CORS)
CORS_ORIGINS=https://montajati-frontend.onrender.com,https://montajati.onrender.com,https://montajati-app.netlify.app

# ===================================
# إعدادات التطبيق
# ===================================
# رسوم التوصيل الافتراضية (بالدينار العراقي)
DEFAULT_DELIVERY_FEE=5000

# بادئة رقم الطلب
ORDER_PREFIX=ORD

# إرسال تلقائي للتوصيل
AUTO_SEND_TO_DELIVERY=false

# تفعيل الإشعارات
NOTIFICATIONS_ENABLED=true

# ===================================
# إعدادات شركة التوصيل - الوسيط
# ===================================
# سيتم قراءة هذه البيانات من قاعدة البيانات
# هذه فقط للمرجع أو للاختبار
ALWASEET_USERNAME=your-username
ALWASEET_PASSWORD=your-password
ALWASEET_BASE_URL=https://api.alwaseet.com

# ===================================
# إعدادات المراقبة والسجلات
# ===================================
# مستوى السجلات (error, warn, info, debug)
LOG_LEVEL=info

# تفعيل مراقبة الأداء
PERFORMANCE_MONITORING=true

# ===================================
# إعدادات التخزين المؤقت
# ===================================
# مدة التخزين المؤقت للمنتجات (بالثواني)
PRODUCTS_CACHE_TTL=300

# مدة التخزين المؤقت للمدن (بالثواني)
CITIES_CACHE_TTL=3600

# ===================================
# إعدادات قاعدة البيانات
# ===================================
# حد الاتصالات المتزامنة
DB_POOL_MAX=20
DB_POOL_MIN=5

# مهلة الاستعلام (بالثواني)
DB_QUERY_TIMEOUT=30

# ===================================
# إعدادات الإشعارات المتقدمة
# ===================================
# تفعيل إشعارات Telegram (اختياري)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# تفعيل إشعارات البريد الإلكتروني (اختياري)
EMAIL_SERVICE_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===================================
# إعدادات النسخ الاحتياطي
# ===================================
# تفعيل النسخ الاحتياطي التلقائي
AUTO_BACKUP_ENABLED=true

# تكرار النسخ الاحتياطي (cron format)
BACKUP_SCHEDULE=0 2 * * *

# ===================================
# إعدادات التحليلات
# ===================================
# تفعيل Google Analytics (اختياري)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# تفعيل تتبع الأخطاء
ERROR_TRACKING_ENABLED=true

# ===================================
# ملاحظات مهمة
# ===================================
# 1. لا تشارك هذا الملف مع أي شخص
# 2. استخدم قيم قوية ومعقدة للمفاتيح
# 3. تأكد من تحديث جميع القيم قبل النشر
# 4. احتفظ بنسخة احتياطية آمنة من هذا الملف
# 5. راجع القيم دورياً وحدثها حسب الحاجة
