# ===================================
# متغيرات البيئة لـ DigitalOcean App Platform
# Environment Variables for DigitalOcean App Platform
# ===================================

# إعدادات النظام الأساسية
NODE_ENV=production
PORT=3003

# قاعدة البيانات - Supabase
SUPABASE_URL=https://fqdhskaolzfavapmqodl.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Firebase للإشعارات
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# الوسيط للشحن
WASEET_USERNAME=your_waseet_username
WASEET_PASSWORD=your_waseet_password

# الأمان
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Cloudinary لرفع الصور
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# إعدادات DigitalOcean (اختيارية)
DIGITALOCEAN_APP_URL=https://your-app-name.ondigitalocean.app

# إعدادات المزامنة
SYNC_INTERVAL=60000
NOTIFICATIONS_ENABLED=true

# إعدادات التطبيق
APP_NAME=منتجاتي
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# ===================================
# ملاحظات مهمة:
# ===================================
# 1. لا تضع هذا الملف في Git
# 2. استخدم هذه القيم في DigitalOcean Dashboard
# 3. تأكد من أن جميع المفاتيح صحيحة
# 4. FIREBASE_PRIVATE_KEY يجب أن يحتوي على \n للأسطر الجديدة
# 5. جميع المتغيرات مطلوبة للعمل الصحيح
